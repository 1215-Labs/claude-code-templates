      {"name": "multi-model-orchestration", "path": "skills/multi-model-orchestration", "description": "Orchestrate tasks across Gemini/Codex via forked terminals"}
    ],
    "workflows": [
      {"name": "bug-investigation", "path": "workflows/bug-investigation.md"},
      {"name": "code-quality", "path": "workflows/code-quality.md"},
