{
  "version": "1.0.0",
  "scope": "global",
  "description": "Core Claude Code components installed to ~/.claude/",
  "components": {
    "commands": [
      {
        "name": "workflow",
        "type": "directory",
        "path": "commands/workflow",
        "description": "Workflow automation commands (prime, code-review, rca, etc.)"
      },
      {
        "name": "prp-claude-code",
        "type": "directory",
        "path": "commands/prp-claude-code",
        "description": "PRP creation and execution for Claude Code"
      },
      {
        "name": "prp-any-agent",
        "type": "directory",
        "path": "commands/prp-any-agent",
        "description": "PRP creation and execution for any CLI agent"
      },
      {
        "name": "dev",
        "type": "directory",
        "path": "commands/dev",
        "description": "Component development commands (new-component, validate, etc.)"
      }
